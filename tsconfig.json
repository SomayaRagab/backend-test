{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules", "__test__"],
}
